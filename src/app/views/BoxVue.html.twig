{% extends 'base.html.twig' %}

{% block title %}
	Box - Detail
{% endblock %}

{% block body %}
	<figure>
		<blockquote class="blockquote mx-4 mt-4">
			<h1>La Box
				{{ box.libelle }}</h1>
			<p class="mb-0">{{ box.description }}</p>
		</blockquote>
	</figure>

	<hr>

	{% if prestations is not empty %}

		<div class="container mt-4">
			<h2>Les prestations de la box :
			</h2>


			<table class="table table-hover table-primary table-bordered">
				<thead>
					<tr>
						<th scope="col">Libelle</th>
						<th scope="col">Id</th>
						<th scope="col">Description</th>
						<th scope="col">Tarif</th>
						<th scope="col">Quantité</th>
					</tr>
				</thead>
				<tbody>


					{% for prestation in prestations %}

						<tr class="table-light" onclick="window.location.href='/prestation?id={{ prestation.id }}'" onmouseover="this.style.cursor='pointer'; this.style.backgroundColor='#f8f9fa';" onmouseout="this.style.backgroundColor='white';">
							<td>
								<a class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/prestation?id={{ prestation.id }}">{{ prestation.libelle }}</a>
							</td>
							<td>{{ prestation.presta_id }}</td>
							<td>{{ prestation.description }}</td>
							<td>{{ prestation.tarif }}
								€</td>
							<td>{{ prestation.quantite }}</td>
						</tr>

					{% endfor %}

				</tbody>

			</table>

			<h5 class="text-center">
				{{ box.montant }}
				€ au total pour la box
			</h5>

		</div>

	{% else %}

		<h3 class="text-center">Aucune prestation pour cette box</h3>

	{% endif %}

{% endblock %}
